<!--    <group>  &lt;!&ndash; New Parent Group &ndash;&gt;-->
<!--        <group>-->
<!--            <xpath expr="//group[1]" position="replace"/>  &lt;!&ndash; Moves existing group inside &ndash;&gt;-->
